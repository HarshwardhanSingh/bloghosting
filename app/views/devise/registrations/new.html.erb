<div class="sign-up">
  <h3 style="text-align:center;">Sign Up</h3>
  <hr>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <div class="form-group">
      <%= f.input :username,label: false, required: true,input_html:{placeholder: "Username",onBlur: 'checkUsernameAvailability()'}, autofocus: true %>
      <span id="user-availability-status" class="pull-right" style= 'display:none;'>
      </span>
      </div>
      <%= f.association :profession,label: false %>
      <%= f.input :email,label: false, required: true,input_html:{placeholder: "Email"} %>
      <%= f.input :password,label: false, required: true,input_html:{placeholder: "Password"} %>
      <%= f.input :password_confirmation,label: false,input_html:{placeholder: "Confirm Password"}, required: true %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Sign Up",class: 'sign-up-in-btn' %>
    </div>
  <% end %>
</div>
