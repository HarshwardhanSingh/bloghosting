<div class="row">
  <div class="col-md-3">
    <%= image_tag(current_user.avatar.url(:large),class: 'img-thumbnail',style:'margin-left:auto;margin-right:auto;display:block;') %>
    <h4 style="margin-left:auto;margin-right:auto;display:block;text-align:center;"><%= current_user.username.capitalize %></h4>
    <table class="table" style="width:60%;margin-left:auto;margin-right:auto;margin-top:3rem;">
      <tr>
        <td>From</td>
        <td><%= fa_icon('map-marker',text: "India") %></td>
      </tr><tr>
        <td>Joined</td>
        <td><%= fa_icon('clock-o',text: current_user.created_at.year) %></td>
      </tr>
    </table>
  </div>
  <div class="col-md-6" style="border-left:3px solid #e9e9e9;">
    <div class="Edit-account-form">
      <h3>Edit Account</h3>
      <hr>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :username,label: false,input_html:{placeholder: "Change Username"}, required: true, autofocus: true %>
          <%= f.input :email,label: false,input_html:{placeholder: "Change Email"}, required: true %>
          <%= f.association :profession %>
          <%= f.input :about,label: false,input_html:{placeholder: "Short Bio"} %>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
          <% end %>

          <%= f.input :password,label: false, autocomplete: "off",input_html:{placeholder: "New Password [Leave it blank if you don't want to change it]"},required: false %>
          <%= f.input :password_confirmation,label: false,input_html:{placeholder: "Confirm New Password"}, required: false %>
          <%= f.input :current_password,label: false,input_html:{placeholder: "Current Password [We need your current password to confirm your changes]"},required: true %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Update Account",class: 'btn btn-info',style: 'width:100%;line-height:2;' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
